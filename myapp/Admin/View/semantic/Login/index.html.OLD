<include file="myapp/Admin/View/Index/header.html"/>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>登陆</h1>
		<p class="help-block">在此登陆</p>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<form>
			<div class="form-group">
				<input type="email" class="form-control" id="email" name="email" placeholder="请输入邮箱">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
			</div>
			<div class="form-group">
				<button type="button" id="logincheck" class="btn btn-primary form-control">登陆</button>
				
			</div>
			<div class="form-group">
				<a href="{:U('reg')}" class="btn btn-info form-control">注册</a>
			</div>	
		</form>
	</div>
</div>
<script>
	$("#logincheck").on('click',function(){
		if(fieldcheck()){login();return false}else{return false;}
	});
	$(document).keyup(function(event){
		if(event.which==13 && fieldcheck()){login()}
	})

	function fieldcheck(){
		if($("#email").val().trim()==""){
			layer.msg("请输入邮箱",{"icon":3});
			return false;
		}else if($("#password").val().trim()==""){
			layer.msg("请输入密码",{"icon":3})
			return false;
		}else{

			return true;
		}

	}


	function login(){
		$.post("{:U('login')}",$("form").serialize(),function(data,status){
			var result=JSON.parse(data);
			if(result.code==200){
				layer.msg(result.message,{"icon":1});
				setTimeout(function(){
					location.href="{:U('Admin/Index/Index')}"
				},2000)
			}else{
				layer.msg(result.message,{"icon":2})
			}
		})
		return false;
	}
</script>
<include file="myapp/Admin/View/Index/footer.html"/>
